@{
    var tech = Model?.GetType().GetProperty("Technical")?.GetValue(Model) as IEnumerable<Portfolio.Web.Models.Skill>;
    var soft = Model?.GetType().GetProperty("Soft")?.GetValue(Model) as IEnumerable<Portfolio.Web.Models.Skill>;
}

@if ((tech?.Any() ?? false) || (soft?.Any() ?? false))
{
    <div class="container py-5 text-center">
        <h2 class="fw-bold mb-3 text-gradient">Kỹ năng</h2>
        <p class="text-muted mb-5">Tóm tắt về chuyên môn kỹ thuật và kỹ năng mềm của tôi được phát triển thông qua các dự án thực tế, quá trình học tập làm việc.</p>

        <div class="row justify-content-center g-4">

            @if (tech != null && tech.Any())
            {
                <div class="col-lg-7">
                    <div class="skill-box shadow-sm rounded-4 p-4 text-start bg-white h-100">
                        <h5 class="fw-semibold mb-4 text-primary"><i class="bi bi-laptop me-2"></i>Technical Skills</h5>
                        <div class="row g-3">
                            @foreach (var s in tech)
                            {
                                <div class="col-md-6">
                                    <div class="p-3 border rounded-4 skill-card">
                                        <div class="d-flex justify-content-between align-items-center mb-2 small fw-semibold">
                                            <span>@s.Name</span>
                                            <span>@s.Level%</span>
                                        </div>
                                        <div class="progress rounded-pill" style="height: 8px;">
                                            <div class="progress-bar bg-gradient" style="width:@s.Level%"></div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            @if (soft != null && soft.Any())
            {
                <div class="col-lg-5">
                    <div class="skill-box shadow-sm rounded-4 p-4 text-start bg-white h-100">
                        <h5 class="fw-semibold mb-4 text-success"><i class="bi bi-people-fill me-2"></i>Soft Skills</h5>
                        <div class="row g-2">
                            @foreach (var s in soft)
                            {
                                <div class="col-6">
                                    <div class="border rounded-4 text-center py-3 px-2 skill-pill">
                                        <span class="fw-medium">@s.Name</span>
                                        <div class="small text-muted">@s.Level%</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p class="text-muted text-center mt-5">Chưa có kỹ năng nào được thêm.</p>
}
