@model IEnumerable<Portfolio.Web.Models.Project>

@if (Model != null && Model.Any())
{
    <div class="container py-5 text-center">
        <h2 class="fw-bold mb-3 text-gradient">My Projects</h2>
        <p class="text-muted mb-5">
            Explore the innovative web projects I have developed.
        </p>

        <div class="row g-4 justify-content-center">
            @foreach (var project in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 rounded-4 shadow-sm overflow-hidden project-card h-100 text-start bg-white">
                        <!-- Ảnh minh họa -->
                        <div class="position-relative">
                            <img src="@project.ImageUrl" alt="@project.Title"
                                 class="img-fluid w-100 project-img" />
                        </div>

                        <!-- Nội dung -->
                        <div class="card-body p-4 d-flex flex-column">
                            <h5 class="fw-bold mb-2">@project.Title</h5>
                            <p class="text-muted flex-grow-1">@project.Description</p>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <a href="@project.LiveDemoUrl" target="_blank"
                                   class="btn btn-dark-soft btn-sm px-3 rounded-pill shadow-sm">
                                    <i class="bi bi-play-circle me-1"></i> Live Demo
                                </a>
                                <a href="@project.GitHubUrl" target="_blank"
                                   class="btn btn-outline-dark btn-sm px-3 rounded-pill shadow-sm">
                                    <i class="bi bi-github me-1"></i> GitHub
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p class="text-muted text-center mt-5">Chưa có dự án nào được thêm.</p>
}







