@model Portfolio.Web.Models.ContactMessage
@{
    ViewData["Title"] = "Let's Connect";
}

<section class="section">
    <div class="container">
        <h2 class="fw-bold mb-5 text-center text-gradient">Let's Connect</h2>

        <div class="row g-5">
            <!-- LEFT: Social links -->
            <div class="col-lg-5 text-center" data-aos="fade-right">
                <h4 class="fw-semibold mb-3">Social Networks</h4>
                <p class="text-muted mb-4">Kết nối với mình qua các nền tảng sau nhé 👋</p>

                <div class="d-flex justify-content-center gap-3">
                    <a href="https://github.com/HuyCong211" class="btn btn-outline-dark rounded-circle fs-4"><i class="bi bi-github"></i></a>
                    <a href="https://www.facebook.com/nhc.huycong" class="btn btn-outline-primary rounded-circle fs-4"><i class="bi bi-facebook"></i></a>
                    <a href="https://www.instagram.com/n.hy.congg_/" class="btn btn-outline-danger rounded-circle fs-4"><i class="bi bi-instagram"></i></a>
                    <a href="https://www.youtube.com/@@HuyCongNguyen-fz4ev" class="btn btn-outline-danger rounded-circle fs-4"><i class="bi bi-youtube"></i></a>
                </div>
            </div>

            <!-- RIGHT: Send message form -->
            <div class="col-lg-7" data-aos="fade-left">
                <h4 class="fw-semibold mb-3">Send a Message</h4>

                @if (ViewBag.Success != null)
                {
                    <div class="alert alert-success shadow-sm">@ViewBag.Success</div>
                }

                <form asp-controller="Contact" asp-action="Index" method="post" class="p-4 rounded-4 shadow-sm bg-white">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control rounded-pill" placeholder="Nhập tên của bạn" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" class="form-control rounded-pill" placeholder="Nhập email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Message" class="form-label fw-semibold"></label>
                        <textarea asp-for="Message" class="form-control rounded-4" rows="4" placeholder="Lời nhắn của bạn..."></textarea>
                        <span asp-validation-for="Message" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">
                        <i class="bi bi-send-fill me-1"></i> Gửi ngay
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
