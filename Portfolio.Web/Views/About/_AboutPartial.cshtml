@model Portfolio.Web.Models.Profile
@if (Model!= null)
{
    <div class="container text-center">
        <div class="row align-items-center g-5">

            <!-- LEFT: Ảnh đại diện -->
            <div class="col-lg-4 text-center" data-aos="fade-right">
                <div class="card-ui p-3 rounded-20 shadow-sm">
                    <img src="~/img/profile.jpg" class="img-fluid rounded-20" alt="@Model?.FullName" />
                </div>
            </div>

            <!-- RIGHT: Thông tin -->
            <div class="col-lg-8" data-aos="fade-left">
                <h3 class="fw-bold mb-2 text-gradient">About Me</h3>
                <p class="text-muted mb-4">
                    @Model.Bio
                </p>

                <!-- Info boxes -->
                <div class="row g-3">
                    <div class="col-sm-6">
                        <div class="info-box p-3 border rounded-3 shadow-sm bg-white text-start">
                            <i class="bi bi-person-fill text-primary me-2"></i>
                            <strong>Name:</strong> @Model.FullName
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="info-box p-3 border rounded-3 shadow-sm bg-white text-start">
                            <i class="bi bi-geo-alt-fill text-danger me-2"></i>
                            <strong>Location:</strong> @Model.Address
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="info-box p-3 border rounded-3 shadow-sm bg-white text-start">
                            <i class="bi bi-envelope-fill text-warning me-2"></i>
                            <strong>Email:</strong> @Model.Email
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="info-box p-3 border rounded-3 shadow-sm bg-white text-start">
                            <i class="bi bi-mortarboard-fill text-success me-2"></i>
                            <strong>Studying At:</strong> @Model.University
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="info-box p-3 border rounded-3 shadow-sm bg-white text-start">
                            <i class="bi bi-telephone-fill text-info me-2"></i>
                            <strong>Phone:</strong> @Model.Phone
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="info-box p-3 border rounded-3 shadow-sm bg-white text-start">
                            <i class="bi bi-briefcase-fill text-secondary me-2"></i>
                            <strong>Profession:</strong> @Model.Profession
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="mt-4 d-flex flex-wrap gap-3">
                    <a href="@Url.Action("DownloadCv", "About", new { fileName = Model?.CvFileName })"
                       class="btn btn-dark-soft px-4 py-2 shadow-sm">
                        <i class="bi bi-download me-1"></i> Download CV
                    </a>

                    <a href="#contact" class="btn btn-outline-dark px-4 py-2 shadow-sm">
                        <i class="bi bi-chat-dots me-1"></i> Hire Me Now
                    </a>
                </div>
            </div>
        </div>
    </div>
}

            

 